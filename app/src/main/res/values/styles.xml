<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="TextViewMovieActorName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextViewGeneralHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_general</item>
        <item name="android:textSize">@dimen/text_size_general</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="ShapeableImageViewMovieActorPhoto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/actor_photo_margin_top</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/small_rating_bar</item>
    </style>
</resources>